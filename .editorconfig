# EditorConfig helps developers define and maintain consistent coding styles
# for different editors and IDEs. For more information, visit http://editorconfig.org

# Top-most EditorConfig file
root = true

# Set default charset
[*]
charset = utf-8

# Indentation settings
[*.js]
indent_style = space
indent_size = 2

[*.html]
indent_style = space
indent_size = 2

# End-of-line settings
[*.{js,html}]
end_of_line = lf
